---
import Section from '../common/section'
import { getCollection } from 'astro:content'

const projects = await getCollection('projects')
---

<Section>
  <ul>
    {
      projects.map((project) => (
        <li>
          <a href={`/projects/${project.id}`}>{project.data.title}</a>
        </li>
      ))
    }
  </ul>
</Section>
