---
import HeaderComponent, { HeaderLogo } from './header'
import { Picture } from 'astro:assets'
import { getEntry } from 'astro:content'

const site = await getEntry('site', 'site')
---

<HeaderComponent client:idle>
  <HeaderLogo>
    <Picture
      src={site!.data.logo}
      alt={site!.data.title}
      layout='fixed'
      width={32}
      height={32}
      fit='contain'
      priority={true}
    />
  </HeaderLogo>
</HeaderComponent>
