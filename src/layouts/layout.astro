---
import BaseLayout, { type Props as BaseProps } from './base.astro'
import Meta, { type Props as MetaProps } from '~/components/core/meta.astro'
import Header from '~/components/header/header.astro'
import './main.css'

export interface Props extends BaseProps, MetaProps {}

const { title, description, class: className, ...props } = Astro.props
---

<BaseLayout
  class:list={['flex min-h-screen flex-col *:w-full', className]}
  {...props}
>
  {/* <body /> */}
  <Header />
  <slot />

  {/* <head /> */}
  <Fragment slot='head'>
    <Meta title={title} description={description} />
  </Fragment>
</BaseLayout>
